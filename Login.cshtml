@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - YourAppName</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        /* Full-page background styling */
        body {
            background: linear-gradient(to right, #007bff, #00c6ff);
            font-family: 'Roboto', sans-serif;
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #fff;
        }

        .form-container {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            padding: 30px;
            width: 100%;
            max-width: 400px;
            color: #333;
        }

        .form-title {
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .form-subtitle {
            font-size: 0.95rem;
            margin-bottom: 20px;
            color: #666;
        }

        .form-label {
            font-weight: bold;
            color: #555;
        }

        .forgot-password {
            font-size: 0.85rem;
            color: #007bff;
            text-decoration: none;
        }

            .forgot-password:hover {
                text-decoration: underline;
            }

        .btn-primary {
            background: linear-gradient(to right, #007bff, #0056b3);
            border: none;
            transition: background 0.3s ease;
        }

            .btn-primary:hover {
                background: linear-gradient(to right, #0056b3, #007bff);
            }

        .signup-link a {
            color: #007bff;
            text-decoration: none;
        }

            .signup-link a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="form-container">
        <h2 class="form-title text-center">Welcome Back</h2>
        <p class="form-subtitle text-center">Sign in to your account</p>

        <!-- Display Success or Error Messages -->
        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success text-center">@ViewBag.Success</div>
        }
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <!-- Login Form -->
        <form method="post" action="/Account/Login">
            <!-- Email Field -->
            <div class="form-group mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email address" required>
            </div>

            <!-- Password Field -->
            <div class="form-group mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
            </div>

            <!-- Submit Button -->
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary w-100">Sign In</button>
            </div>

            <!-- Forgot Password Link -->
            <div class="text-center">
                <a href="/Account/ForgotPassword" class="forgot-password">Forgot your password?</a>
            </div>
        </form>

        <!-- Sign-Up Link -->
        <div class="text-center mt-3 signup-link">
            <p>Don't have an account? <a href="/Account/SignUp">Sign Up</a></p>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
