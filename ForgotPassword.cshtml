@{
    ViewData["Title"] = "Forgot Your Password";
}

<div class="forgot-password-page" style="background-image: url('https://your-wallpaper-url.com/background.jpg');">
    <div class="form-container">
        <div class="form-card">
            <h2 class="form-title">Forgot Your Password?</h2>
            <p class="form-subtitle">Enter your email address, and we'll send you a link to reset your password.</p>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Error:</strong> @ViewBag.Error
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Success:</strong> @ViewBag.Success
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <form method="post" action="/Account/ForgotPassword" class="forgot-password-form">
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email Address" required>
                    <label for="email">Email Address</label>
                </div>
                <button type="submit" class="btn btn-primary w-100 py-2">Send Reset Link</button>
            </form>
            <div class="mt-3 text-center">
                <small><a href="/Account/Login" class="form-link">Back to Login</a></small>
            </div>
        </div>
    </div>
</div>

<style>
    /* Full-page background styling */
    .forgot-password-page {
        height: 100vh;
        background-size: cover;
        background-position: center;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Roboto', sans-serif;
        color: #fff;
    }

    /* Form Container */
    .form-container {
        background: rgba(0, 0, 0, 0.7); /* Transparent dark overlay */
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        max-width: 500px;
        width: 100%;
    }

    /* Form Header */
    .form-title {
        font-size: 2rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 10px;
    }

    .form-subtitle {
        font-size: 1rem;
        text-align: center;
        color: #ccc;
        margin-bottom: 20px;
    }

    /* Floating Input Labels */
    .form-floating .form-control {
        height: 3.5rem;
        font-size: 1rem;
        border: none;
        border-radius: 5px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
    }

    .form-floating label {
        font-size: 0.85rem;
        color: #ccc;
    }

    /* Submit Button */
    .btn-primary {
        background: linear-gradient(to right, #007bff, #0056b3);
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        font-weight: bold;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(to right, #0056b3, #007bff);
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.4);
        }

    /* Back to Login Link */
    .form-link {
        color: #00c6ff;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .form-link:hover {
            text-decoration: underline;
        }
</style>
