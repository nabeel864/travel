@{
    ViewData["Title"] = "Dashboard";
    var userName = ViewBag.UserName ?? "User";
}

<div class="dashboard-page">
    <div class="welcome-banner">
        <h1>Welcome, @userName!</h1>
        <p>Your account is ready to explore.</p>
    </div>

    <div class="features-container">
        <h2>Features</h2>
        <div class="features-grid">
            <div class="feature-card">
                <h3>Profile</h3>
                <p>View and update your personal information.</p>
                <a href="/Account/Profile" class="btn btn-primary">Go to Profile</a>
            </div>
            <div class="feature-card">
                <h3>Settings</h3>
                <p>Manage your account settings and preferences.</p>
                <a href="/Account/Settings" class="btn btn-primary">Go to Settings</a>
            </div>
            <div class="feature-card">
                <h3>Logout</h3>
                <p>Log out of your account securely.</p>
                <a href="/Account/Logout" class="btn btn-danger">Log Out</a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Dashboard Styling */
    .dashboard-page {
        font-family: 'Roboto', sans-serif;
        padding: 20px;
    }

    .welcome-banner {
        text-align: center;
        margin-bottom: 40px;
    }

        .welcome-banner h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #007bff;
        }

        .welcome-banner p {
            font-size: 1.2rem;
            color: #555;
        }

    .features-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
    }

    .feature-card {
        background: #f8f9fa;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

        .feature-card h3 {
            font-size: 1.5rem;
            color: #007bff;
            margin-bottom: 10px;
        }

        .feature-card p {
            font-size: 1rem;
            color: #666;
            margin-bottom: 20px;
        }

    .btn {
        text-decoration: none;
        display: inline-block;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        color: white;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background-color: #b02a37;
        }
</style>
